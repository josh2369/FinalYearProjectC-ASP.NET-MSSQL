@model IEnumerable<fyp.Model.Player>

@{

    ViewBag.Title = "Player Search";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>
@using (Html.BeginForm("Team", "Team", FormMethod.Get))
{
    @Html.TextBox("Searching")<input type="submit" value="Search" />
}
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>IGN</th>
            <th>Role</th>
            <th>Rank</th>

        </tr>

    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                }
                <td colspan="4">
                    No Matches
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Username</td>
                    <td> @item.IGN </td>
                    <td> @item.Role </td>
                    <td> @item.Rank</td>
                </tr>
            }

        }
    </tbody>
</table>
<div>
    <a href=" @Url.Action("Logout","Home")">Log Out</a>
</div>